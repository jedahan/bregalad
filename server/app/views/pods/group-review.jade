extends ../layout


//- block header
    include includes/header

block content
    .row
        .column-10.push-1
            .centered.page-header
                h1
                    | Would you like to add friends?

                .breathe-top
                    p.lead
                        | Up to 5 people can participate at once


    - for contact in utils.sortByKey(participant.contacts, 'id')

        .row
            .column-10.push-1
                .participant-name
                    | #{contact.getFullName()}

                    .action-buttons
                        a(href="../input/#{contact.identifier}").edit-button.button-link
                        a(href="#", data-confirm-href="../input/#{contact.identifier}/delete", data-confirm="Are you sure you want to delete this participant?").delete-button.button-link


    if participant.contacts && participant.contacts.length < 5
        - for i in _.range(5 - participant.contacts.length)
            .row
                .column-10.push-1
                    .participant-name
                        |  &nbsp;
                        .action-buttons
                            a(href="../input/").button-link.add-button
    .row
        .column-12
            hr

    .row
        .column-12
            .centered.breathe-top.breathe-buttons
                if participant.contacts && participant.contacts.length < 5
                    a(href="../input/")
                        button(type="button")
                            | Add A Friend
                if participant.contacts && participant.contacts.length
                    a(href="../group-ready")
                        button(type="button")
                            | No, I'm done
            